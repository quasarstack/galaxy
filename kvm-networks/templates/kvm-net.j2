<!-- This file is managed using ansible -->
<network>
  <name>{{network.name}}</name>
  {% if network.type is defined and network.type == "nat" %}
  <forward mode='nat'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  {%endif%}
  <domain name='{{network.name}}'/>
  <ip address='{{network.address}}' netmask='{{network.netmask}}'>
    <dhcp>
      <range start='{{network.start}}' end='{{network.end}}'/>
    </dhcp>
  </ip>
</network>